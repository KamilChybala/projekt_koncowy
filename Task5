import yaml

def zapisz_do_yml(dane, sciezka_do_pliku):
    try:
        with open(sciezka_do_pliku, 'w', encoding='utf-8') as plik:
            yaml.dump(dane, plik, allow_unicode=True, default_flow_style=False, indent=4)
        print("Dane zostały zapisane do pliku YAML.")
    except Exception as e:
        print(f"Wystąpił błąd podczas zapisywania do pliku: {e}")

# Przykład danych do zapisu
dane = {
    "imie": "Jan",
    "nazwisko": "Kowalski",
    "wiek": 30,
    "miasto": "Warszawa"
}

# Przykład użycia
sciezka_do_pliku = 'sciezka/do/twojego/pliku.yml'
zapisz_do_yml(dane, sciezka_do_pliku)
